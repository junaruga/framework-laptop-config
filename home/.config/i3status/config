# i3status configuration file.
# see "man i3status" for documentation.

# It is important that this file is edited as UTF-8.
# The following line should contain a sharp s:
# ÃŸ
# If the above line is not correctly displayed, fix your editor first!

general {
        colors = true
        color_good = "#00ee00"
        color_degraded = "#eeee00"
        color_bad = "#ee0000"
        interval = 5
}

order += "disk /"
order += "load"
order += "memory"
order += "volume master"
order += "battery all"
order += "wireless _first_"
order += "ethernet _first_"
# order += "ipv6"
order += "tztime local"

ipv6 {
        format_up = "%ip"
        format_down = "no IPv6"
}

wireless _first_ {
        format_up = "WiFi %essid %quality %bitrate %frequency"
        format_down = "WiFi down"
}

ethernet _first_ {
        format_up = "Eth %ip (%speed)"
        format_down = "Eth down"
}

battery all {
        format = "Bat %status %percentage %remaining (%emptytime %consumption)"
        format_down = "No battery"
        status_chr = "âš¡ CHR"
        status_bat = "ðŸ”‹ BAT"
        status_unk = "? UNK"
        status_full = "â˜» FULL"
        low_threshold = 20
}

disk "/" {
        format = "Disk avail %avail"
}

load {
        format = "Load %1min"
}

memory {
        format = "Mem used %used avail %available"
        threshold_degraded = "1G"
        format_degraded = "MEMORY < %available"
}

tztime local {
        format = "%Y/%m/%d %a %H:%M:%S"
}

volume master {
        format = "â™ª %volume"
        format_muted = "â™ª muted (%volume)"
        device = "default"
        mixer = "Master"
        mixer_idx = 0
}
